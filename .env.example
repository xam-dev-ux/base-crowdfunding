# Wallet & Deployment
PRIVATE_KEY=your_private_key_here

# Base Network RPC URLs
BASE_MAINNET_RPC=https://mainnet.base.org
BASE_SEPOLIA_RPC=https://sepolia.base.org

# Etherscan API V2 (works for Basescan and 60+ EVM chains with one key)
# Get your free API key: https://docs.etherscan.io/getting-an-api-key
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Next.js Public Variables
NEXT_PUBLIC_CONTRACT_ADDRESS=deployed_contract_address_here
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_NETWORK_NAME=Base Mainnet
